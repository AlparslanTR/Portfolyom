@{
    Layout = null;
}
@model AdminSignInDto

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Paneli BGY</title>
    <link rel="icon" href="~/Images/548Dvv7a_400x400.jpg" />
    <link href="~/AdminTema5/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/AdminTema5/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/AdminTema5/css/animate.css" rel="stylesheet">
    <link href="~/AdminTema5/css/style.css" rel="stylesheet">

</head>

<body class="gray-bg">

    <div class="middle-box text-center loginscreen animated fadeInDown mt-5">
        <div>
            <div>
                <img src="~/Images/548Dvv7a_400x400.jpg" style="height:299px; width:300px;" />
            </div>
            <div asp-validation-summary="ModelOnly" class="alert alert-danger mt-2" role="alert"></div>
            <hr />
            <p>Blog Sistemi ve Proje Tanıtım Portalına Giriş</p>
            <form class="m-t" asp-area="Admin" asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <input type="email" class="form-control" placeholder="Mail" required="" asp-for="Email" value="bybluestht@gmail.com">
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Şifre" required="" asp-for="Password" value="A.lparslan12345">
                </div>
                <button type="submit" class="btn btn-primary block full-width m-b">Giriş</button>
            </form>            
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/AdminTema5/js/jquery-3.1.1.min.js"></script>
    <script src="~/AdminTema5/js/popper.min.js"></script>
    <script src="~/AdminTema5/js/bootstrap.js"></script>

</body>

</html>
