@using IdeBlogMvc.Areas.Admin.Dtos;
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Areas/Shared/_AdminLayout.cshtml";
}
@model AdminSignUpDto

<div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

<div class="col-lg-12">
    <div class="ibox">
        <div class="ibox-title">
            <h5>Kullanıcı Kayıt Etme</h5>
            <div class="ibox-tools">
                <a class="collapse-link">
                    <i class="fa fa-chevron-up"></i>
                </a>
            </div>
        </div>
        <div class="ibox-content">
            <div class="row">   
                <div class="col-sm-12 b-r">
                    <form asp-area="Admin" asp-controller="Account" asp-action="SignUp">
                        <div class="alert  alert-info">* Alanların Doldurulması Zorunludur.!</div>
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" asp-for="UserName" placeholder="Ad Soyad" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            <input type="email" asp-for="Email" placeholder="Mail Adresi" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" placeholder="Şifre" class="form-control">
                        </div>
                        <div class="form-group">
                            <label asp-for="PasswordConfirm"></label>
                            <input type="password" asp-for="PasswordConfirm" placeholder="Şifre Tekrar" class="form-control">
                        </div>
                        <div>
                            <button class="btn btn-sm btn-primary float-right m-t-n-xs" type="submit"><strong>Kayıt Ekle</strong></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@await Component.InvokeAsync("NToastNotify")
