<div class="container-fluid bg-info d-flex align-items-center mb-5 py-5" id="home" style="min-height: 100vh;">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-5 px-5 pl-lg-0 pb-5 pb-lg-0">
                <img class="img-fluid w-100 rounded-circle shadow-sm" src="~/portfolyo/img/33991.jpg" alt="Alparslan Akbaş">
            </div>
            <div class="col-lg-7 text-center text-lg-left">
                <h3 class="text-white font-weight-normal mb-3">@localizer.GetKey("Ben").Value</h3>
                <h1 class="display-4 text-uppercase text-primary mb-2" style="-webkit-text-stroke: 2px #ffffff;">Alparslan Akbaş</h1>
                <h1 class="typed-text-output d-inline font-weight-lighter text-white"></h1>
                <div class="typed-text d-none">Software Developer, .Net Developer, Web Developer</div>
                <div class="d-flex align-items-center justify-content-center justify-content-lg-start pt-5">
                    <a onclick="downloadCv()" class="btn btn-outline-light mr-5">@localizer.GetKey("Cv İndir").Value</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!--Cv İndirme-->
<script>
    function downloadCv() {
        var link = document.createElement('a');
        link.href = '@Url.Action("DownloadCv", "Hakkımda")';
        link.download = 'Özgeçmiş.pdf';
        link.target = '_blank'; // İsteğe bağlı olarak yeni bir sekmede açmak için
        link.click();
    }
</script>